@{
    Page.Title = "HomeworkQuiz Result";
    Layout = "~/Shared/_SiteLayout.cshtml";

    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Login");
    }

    if (Request.QueryString["points"] == null)
    {
        Response.Redirect("~/Forum");
    }
}

<div class="row">
    @if(Request.QueryString["points"].AsInt() >= 3)
    {
        <div class="center">
            <h3>Congratulaions!</h3>
        </div>
        <div class="center">
            <p class="flow-text">You answered @Request.QueryString["points"] out of the 5 questions correctly, good job!</p>
        </div>
    }
    else
    {
        <div class="center">
            <h3>Too Bad</h3>
        </div>
        <div class="center">
            <p class="flow-text">You answred @Request.QueryString["points"] out of the 5 questions correctly, better luck next time</p>
        </div>
    }
</div>